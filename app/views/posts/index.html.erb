

<!-- 주석처리입니다 -->

<section class='body'>

<% @posts.each do |post| %>
    
    <div class="panel panel-primary">
     <div class="panel-heading">
       <h5 style='float: right'><%= post.created_at.strftime('%Y %B %-d') %></h5>
       
       <h3 class="panel-title"> <%= post.id %>번째 글입니다              |    <%= post.name %>님의 제보</h3>
     </div>
     <div class="panel-body">
       <%= post.content %>
     </div>
   </div>
   </div>
 

<% end %>

 </section>